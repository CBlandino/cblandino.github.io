@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="InputModel.Username"></label>
                            <input asp-for="InputModel.Username" class="form-control" />
                            <span asp-validation-for="InputModel.Username" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="InputModel.Password"></label>
                            <input asp-for="InputModel.Password" type="password" class="form-control" />
                            <span asp-validation-for="InputModel.Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Log in</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p>Don't have an account? <a asp-page="/Account/Signup">Sign up here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>