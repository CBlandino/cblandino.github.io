@page
@model SignOutModel
@{
    ViewData["Title"] = "Sign Out";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-header">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <p class="card-text">Are you sure you want to sign out, <strong>@User.Identity.Name</strong>?</p>
                    <form method="post">
                        <button type="submit" class="btn btn-primary btn-block">Sign Out</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p>Back to <a asp-page="/Index">Home</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
