@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html>

<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        body {
            margin-bottom: 60px; /* Adjust this value to create space between the contact box and the footer */
        }

        .contact-box {
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .contact-section label {
            font-weight: bold;
        }

        .contact-section button {
            margin-top: 10px;
        }

        .cookie-logo {
            max-width: 80%; /* Adjust the size of the cookie logo to fit the container */
            height: auto; /* Maintain the aspect ratio */
        }

        /* New style for the image container */
        .cookie-logo-container {
            text-align: right; /* Align the image to the right */
            margin-top: 10px; /* Adjust the top margin as needed */
        }
    </style>
</head>

<body>
    <main role="main" class="container">
        <div class="jumbotron text-center">
            <h1 class="display-4">Welcome to My Damiens Cookie Jar!</h1>
            <p class="lead">We aim to serve cookies across Albany!.</p>
        </div>
    </main>

    <div class="container contact-box">
        <div class="row">
            <div class="col-md-6">
                <h2>Contact Us</h2>
                <form method="post">
                    <div class="form-group">
                        <label for="name">User Name:</label>
                        <input type="text" class="form-control" id="name" name="Name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" id="email" name="Email" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Message:</label>
                        <textarea class="form-control" id="message" name="Message" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <!-- New container for the image -->
            <div class="col-md-6 cookie-logo-container">
                <img src="https://i.pinimg.com/1200x/6b/12/95/6b1295dde65aefe1e8a626019f0b99f1.jpg"
                    alt="Cookie Logo" class="cookie-logo">
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
</body>

</html>
